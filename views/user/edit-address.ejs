<link href="/css/userdashboard/style.css" rel='stylesheet' type='text/css' />


<link href="/css/userdashboard/font-awesome.css" rel="stylesheet"> 

<link href='/css/userdashboard/SidebarNav.min.css' media='all' rel='stylesheet' type='text/css'/>

 <script src="js/jquery-1.11.1.min.js"></script>
 <script src="js/modernizr.custom.js"></script>





<div style="display: flex; height: fit-content;">


  <%-include('../partials/userSideBar.ejs') %>
  
  <div style="width: 100%;margin-top: 100px;font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;"> 
    <section class="content-main"style=" height: fit-content;">
        <form
          id="address-form"
          action="/edit-address"
          method="post"
          enctype="application/x-www-form-urlencoded">
         
          <div class="row" >
            <div class="col-9" style="background-color: white;">
              <div class="content-header" style="background-color: white;">
                <h2 class="content-title" >Edit Address</h2>

              </div>
            </div>
               
            <div class="col-lg-6" >
              <div class="card mb-4" style="background-color: rgb(82, 79, 79);box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
                <div class="card-header">
                  <h4>Basic</h4>
                </div>
                <div class="card-body" style="color: white;">
                  <div class="mb-4">
                    <label for="product_name" class="form-label" style="font-size: larger;">City</label>
                    <p id="cityerr" style="color: red;display: none;">invalid city</p>
                    <input
                      type="text"
                      name="city"
                      value="<%=selectedAddress.city %>"
                      placeholder="Type here"
                      class="form-control input"
                      id="city" />
                  </div>
                  <div class="mb-4">
                    <label class="form-label" style="font-size: larger;" >Address</label>
                    <p id="addresserr" style="color: red;display: none;">invalid Address</p>

                    <textarea
                    id="address"
                    type="text"
                      name="address"
                      placeholder="Type here"
                      class="form-control input"
                      rows="4"><%=selectedAddress.address %></textarea>
                  </div>

                  <div class="mb-4">
                    <label for="product_name" class="form-label" style="font-size: larger;">state</label>
                    <p id="staterr" style="color: red;display: none;">invalid state</p>

                    <input
                      type="text"
                      name="state"
                      value="<%=selectedAddress.state %>"
                      placeholder="Type here"
                      class="form-control input"
                      id="state" />
                  </div>
                  <div class="mb-4">
                    <label for="product_name" class="form-label" style="font-size: larger;">Phone Number</label>
                    <p id="mobileErr" style="color: red;display: none;">Inavalid Mobile Number</p>
                    <input
                      type="number"
                      value="<%=selectedAddress.mobileNumber %>"
                      name="mobileNumber"
                      placeholder="Type here"
                      class="form-control input"
                      id="mobileNumber" />
                  </div>

                  <div class="row">
                    <div class="col-lg-4">
                      <div class="mb-4">
                        <label  class="form-label" style="font-size: larger;">Pincode</label>
                        <p id="pincodeErr" style="color: red;display: none;">Inavalid Pin Number</p>
                        <div class="row gx-2">
                          <input
                            placeholder="$"
                            id="pincode"
                            value="<%=selectedAddress.pincode %>"
                            name="pincode"
                            type="number"
                            class="form-control input" />
                        </div>
                      </div>
                    </div>
                    
                  </div>
                </div>
              </div>
            
            </div>


          </div>
          <button id="submit" type="submit" style="margin-left: 270px;width: 260px;height: 40px; color: white;background-color: black;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">ADD</button>

        </form>
      </section>
</div>

<div></div>
</div>


<script src="/js/addOrViewAddress.js"></script>

